<%- include("../partials/html-head") %>

<%- include("../partials/nav") %>

<div id=pepper-background>
<main>
  <h1 id="pepper-database"><%= title %></h1>
  <div id="pepper-page"></div>

  <p>Please check the dropdown for the pepper before adding:
    <select>
      <% peppers.forEach(function(pepper) { %>
        <option><%= pepper.pepper %></option>
      <% }) %>
    </select>

  </p>
  <form id="add-pepper-form" action="/peppers" method="POST" placeholder="Pepper Name">
    <label for="pepper-name" placeholder="Pepper Name">
      Pepper name:
      <input type="text" name="pepper" id="pepper-input" required>
    </label>
    <label>
      Scoville Rating:<input type="number" name="scovilleRating" required>
    </label>
    <button class="all-buttons" type="submit">Add Pepper</button>
  </form>
  <h2>All the Peppers!</h2>
  <ul>
    <% peppers.forEach(pepper => { %>
      <li>
        <h4><%= pepper.pepper %> - Scoville rating <%= pepper.scovilleRating %></h4>
      </li>
    <% }) %>
  </ul>
</main>

