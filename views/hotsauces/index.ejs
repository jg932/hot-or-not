<%- include('../partials/html-head') %>

<%- include('../partials/nav') %>

<div class="sauces-background-image">
<section>
  <br>
  <br>
  <h1>Hot Sauce Database</h1>
  <div id="spicy-image"></div>
  <% if (user) { %> 
  <h3 id="new-sauce-message">Add a New Sauce</h3>
  <form action="/hotsauces" method="POST">
    <label>
      <input type="text" name="name" autocomplete="off" required>
    </label>
    <label for="spiciness">Name | Spice Scale
      <select name=spiciness>
        <option value="Mild">Mild</option>
        <option value="Medium">Medium</option>
        <option value="Hot">Hot</option>
        <option value="Spicy">Spicy</option>
        <option value="Spice Spice">Spice Spice</option>
        <option value="Extreme">Extreme Spice Spice</option>
        <option value="☠️">☠️</option>
      </select>
    <label><br>
    <button class="all-buttons" type="submit"> Add Sauce</button>
  </form>
    <% } %> 
  <div id="sauce-listings">
  <h3>All the Sauces!</h3>
  <ul>
    <% hotsauces.forEach(hotsauce => { %>
      <li>
        <a id="sauce-list" href="/hotsauces/<%= hotsauce._id %>"><%= hotsauce.name %></a> <h5>current spiciness rating: <%= hotsauce.spiciness %></h5>
      </li><br>
    <% }) %>
  </ul>
</div>
</section>
</main>

<%- include('../partials/footer') %>
</div>